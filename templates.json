{
  "main": {
    "tag": "div",
    "class": "messages"
  },
    
    "title_h1":{
    "tag": "div",
    "class":"title_h1",
    "inner": [ {
        "tag":"h1",
        "class":"h1", 
        "value":"Let's Chat!"
    }
    ] 
    },
    
    "message": {
    "tag": "div",
    "class": "message",
    "inner": [
      {
        "tag":"button",
        "class":"fa fa-close",
        "onclick":"%click%"
        
      },
        
      {
          "tag": "div",
          "class": "datum",
          "inner": "%datum%"
      },
        
      {
        "tag": "div",
        "class": "name",
        "inner": "%name%"
      },
        
      {
        "tag": "div",
        "class": "text",
        "inner": "%text%"
      },{
          "tag":"button",
          "class":"fa fa-bitbucket",
          "onclick":"%vernichten%"
      }
        
    ]
  },

  "input": {
    "tag": "div",
    "class": "new_message",
    "inner": [
      {
        "tag": "div",
        "class": "name"
      },
      {
        "tag": "div",
        "class": "text",
        "inner": {
          "tag": "form",
          "inner": [
            {
              "tag": "input",
              "class": "input",
              "placeholder": "Verfasse eine Nachricht ..."
            },
            {
              "tag": "input",
              "class": "button",
              "type": "submit",
              "value": "Senden"
            }
          ],
          "onsubmit": "%onsubmit%"
        }
      }
    ]
  }
}